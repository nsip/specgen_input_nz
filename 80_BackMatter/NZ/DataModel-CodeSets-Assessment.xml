<IncludeGroup
	xmlns:xi="http://www.w3.org/2001/XInclude"
 	xmlns="http://sifassociation.org/SpecGen">
	
	
	<CodeSet>
		<Intro>
			<p>Code denoting how an assessment of student's learning is to be made.</p>
		</Intro>
		<ID>Assessment Mode</ID>
		<Values>
			<Value>
				<Code>1</Code>
				<Text>External</Text>
				<Description>
					<p>Student's learning is assessed by an external agency, commonly 
						by setting one or more examinations.</p>
				</Description>
			</Value>    <!--  External -->
			<Value>
				<Code>2</Code>
				<Text>Internal</Text>
				<Description>
					<p>Student's learning is assessed by the teacher who is actively 
						engaged in teaching the student.</p>
				</Description>
			</Value>    <!-- Internal -->
		</Values>
	</CodeSet>   <!-- Assessment Mode -->

	<CodeSet>
		<Intro>
			<p>Standard codes denoting the type of assessment the student is sitting for the assessment task.</p>
		</Intro>
		<ID>Assessment Type</ID>
		<Values>
			<Value>
				<Code>101</Code>
				<Text>Internal Exam/Assessment</Text>
			</Value>    <!-- Internal Exam/Assessment -->
			<Value>
				<Code>102</Code>
				<Text>External Exam/Assessment</Text>
			</Value>    <!-- External Exam/Assessment -->
			<Value>
				<Code>103</Code>
				<Text>Mock</Text>
			</Value>    <!-- Mock -->
			<Value>
				<Code>104</Code>
				<Text>Portfolio</Text>
			</Value>    <!-- Portfolio -->
			<Value>
				<Code>105</Code>
				<Text>Practical</Text>
			</Value>    <!-- Practical -->
			<Value>
				<Code>106</Code>
				<Text>Other</Text>
			</Value>    <!-- Other -->
		</Values>
	</CodeSet>    <!-- Assessment Type -->

	<CodeSet>
		<Intro>
			<p>The type of score metric used for an assessment task result.</p>
		</Intro>
		<ID>Score Metric</ID>
		<Values>
			<Value>
				<Code>101</Code>
				<Text>Raw</Text>
			</Value>    <!-- Raw -->
			<Value>
				<Code>102</Code>
				<Text>Scale</Text>
			</Value>    <!-- Scale -->
			<Value>
				<Code>103</Code>
				<Text>Margin of Error</Text>
			</Value>    <!-- Margin of Error -->
			<Value>
				<Code>104</Code>
				<Text>Stanine</Text>
			</Value>    <!-- Stanine -->
			<Value>
				<Code>105</Code>
				<Text>Year Level</Text>
			</Value>    <!-- Year Level -->
			<Value>
				<Code>106</Code>
				<Text>NA</Text>
				<Description>NZQA Assessment Standards: Not Achieved, Achieved</Description>
			</Value>    <!-- NA -->
			<Value>
				<Code>107</Code>
				<Text>NAME</Text>
				<Description>NZQA Achievement Standards: Not Achieved, Achieved, Achieved with Merit, Achieved with Excellence</Description>
			</Value>    <!-- NA -->
		</Values>
	</CodeSet>    <!-- Score Metric -->

	<CodeSet>
		<Intro>
			<p>Standard codes denoting special assessment conditions that a student
				requires when sitting an assessment.</p>
		</Intro>
		<ID>Special Assessment Condition</ID>
		<Values>
			<Value>
				<Code>101</Code>
