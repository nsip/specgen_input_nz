<IncludeGroup xmlns:xs="http://www.w3.org/2001/XMLSchema" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:xi="http://www.w3.org/2001/XInclude" 
	xmlns:xhtml="http://www.w3.org/1999/xhtml" 
	xmlns="http://sifassociation.org/SpecGen">

	<!-- IncludeGroup is syntactic sugar that makes this a well-formed XML file that can
		 be validated separately; and allows the xi:include to have parse="xml"  SpecGen tool ignores it. -->


	<!-- Element types for the Assessment Domain includes:
   		 AssessmentTaskList 
		 etc.
   -->

	<if intl="au">
		<CommonElement name="ValidLetterMarkListType" type="true" dm="true">
			<Item>
				<Element>ValidLetterMarkListType</Element>
				<Description>
					<p>A list of valid Letter Marks</p>
				</Description>
				<List mode="List"/>
			</Item>
			<Item>
				<Element>ValidLetterMark</Element>
				<Characteristics>MR</Characteristics>
				<Description>
					<p>Definition of a valid Letter Mark.</p>
				</Description>
				<Type ref="CommonTypes" name="ValidLetterMarkType"/>
			</Item>
		</CommonElement>
		<CommonElement name="ValidLetterMarkType" type="true" dm="true">
			<Item>
				<Element>ValidLetterMarkType</Element>
				<Description>
					<p>Definition of a valid Letter Mark</p>
				</Description>
			</Item>
			<Item>
				<Element>Code</Element>
				<Characteristics>M</Characteristics>
				<Description>
					<p>String representing the actual Mark that would appear on the report card (e.g., "A+", "I", "100").</p>
				</Description>
				<Type name="xs:token"/>
			</Item>
			<Item>
				<Element>NumericEquivalent</Element>
				<Characteristics>O</Characteristics>
				<Description>
					<p>Numeric equivalent for the Mark (e.g., 100, 4.0).</p>
				</Description>
				<Type name="xs:decimal"/>
			</Item>
			<Item>
				<Element>Description</Element>
				<Characteristics>O</Characteristics>
				<Description>
					<p>The description for this code. (e.g. "Excellent", "Participates in Class", "Incomplete", etc...).</p>
				</Description>
				<Type name="xs:string"/>
			</Item>
		</CommonElement>
		<CommonElement name="StudentGradeMarkersListType" type="true" dm="true">
			<Item>
				<Element>StudentGradeMarkersListType</Element>
				<Characteristics>O</Characteristics>
				<Description>
					<p>A list of staff members who were involved with the grading of the student, or who were responsible for any associated teacher judgement/s.</p>
				</Description>
				<List mode="List"/>
			</Item>
			<Item>
				<Element>Marker</Element>
				<Characteristics>OR</Characteristics>
				<Description></Description>
				<Type ref="CommonTypes" name="MarkerType"/>

			</Item>
		</CommonElement>
		<CommonElement name="MarkerType" type="true" dm="true">
			<Item>
				<Element>MarkerType</Element>
				<Characteristics>OR</Characteristics>
				<Description>
					<p>A staff member, (or members), who were involved with the grading of the student, or who was responsible for any associated teacher judgement and their associated role.  Must be a current member of staff.</p>
				</Description>
			</Item>
			<Item>
				<Element>StaffPersonalRefId</Element>
				<Characteristics>O</Characteristics>
				<Description>
					<p>The RefId of the staff member involved in the marking.</p>
				</Description>
				<Type name="xs:string"></Type>
			</Item>
			<Item>
				<Element>Role</Element>
				<Characteristics>O</Characteristics>
				<Description>
					<p>The role the staff member played in grading the student.</p>
				</Description>
				<Type name="xs:string"></Type>
			</Item>

		</CommonElement>
		<CommonElement name="GradingScoreListType" type="true" dm="true">
			<Item>
				<Element>GradingScoreListType</Element>
				<Characteristics>O</Characteristics>
				<Description>
					<p>Assignments that the student went through to achieve this summative assessment.</p>
				</Description>
				<List mode="List"/>
			</Item>
			<Item>
				<Element>GradingAssignmentScore</Element>
				<Characteristics>OR</Characteristics>
				<Description>
					<p>AssignmentScore.</p>
				</Description>
				<Type ref="CommonTypes" name="AssignmentScoreType"/>
			</Item>
		</CommonElement>
		<CommonElement name="AssignmentScoreType" type="true" dm="true">
			<Item>
				<Element>AssignmentScoreType</Element>
				<Characteristics>OR</Characteristics>
				<Description>
					<p></p>
				</Description>
			</Item>
			<Item>
				<Element>GradingAssignmentScoreRefId</Element>
				<Characteristics>O</Characteristics>
				<Description>
					<p>GUID of a Grading assignment score included in this grade.</p>
				</Description>
				<Type ref="CommonTypes" name="IdRefType"/>
			</Item>
			<Item>
				<Element>Weight</Element>
				<Characteristics>O</Characteristics>
				<Description>
					<p>Weight of the assignment to the overall assessment grade.</p>
				</Description>
				<Type name="xs:decimal"></Type>

			</Item>
		</CommonElement>
		<CommonElement name="GradeType" type="true" dm="true">
			<Item>
				<Element>GradeType</Element>
				<Characteristics>O</Characteristics>
				<Description>
					<p>Overall Student Grade. At least one numeric, percentage or letter must be provided as defined in the fields below.</p>
				</Description>
			</Item>
			<Item>
				<Element>Percentage</Element>
				<Characteristics>C</Characteristics>
				<Description>
					<p>The grade percentage for this grade (0.00-100.00).</p>
				</Description>
				<Type name="xs:decimal"></Type>
				<Facets>
					<xs:minInclusive value="0.00"/>
					<xs:maxInclusive value="100.00"/>
				</Facets>
			</Item>
			<Item>
				<Element>Numeric</Element>
				<Characteristics>C</Characteristics>
				<Description>
					<p>The raw numeric value for this grade.</p>
				</Description>
				<Type name="xs:decimal"></Type>
			</Item>
			<Item>
				<Element>Letter</Element>
				<Characteristics>C</Characteristics>
				<Description>
					<p>The letter grade value for this grade. If this is provided, the numeric value or percentage value must also be entered in order to provide a numeric value for the grade to be utilized in any computations.</p>
				</Description>
				<Type name="xs:token"></Type>
			</Item>
			<Item>
				<Element>Narrative</Element>
				<Characteristics>O</Characteristics>
				<Description>
					<p>The free form text narrative for this grade.  Can incorporate teacher judgement.</p>
				</Description>
				<Type name="xs:string"></Type>
			</Item>
			<Item>
				<Element>MarkInfoRefId</Element>
				<Characteristics>O</Characteristics>
				<Description>
					<p>GUID of a the MarkInfo Object that provides information about this grading.</p>
				</Description>
				<Type ref="CommonTypes" name="IdRefType"/>
			</Item>

		</CommonElement>
		<CommonElement name="GenericRubricType" type="true" dm="true">
			<Item>
				<Element>GenericRubricType</Element>
				<Characteristics>MR</Characteristics>
				<Description>
					<p></p>
				</Description>
			</Item>

			<Item>
				<Element>RubricType</Element>
				<Characteristics>M</Characteristics>
				<Description>
					<p>Category that rubric is scoring for.</p>
				</Description>

				<Type name="xs:normalizedString"></Type>
			</Item>

			<Item>
				<Element>ScoreList</Element>
				<Characteristics>M</Characteristics>
				<Description>
					<p>Category that rubric is scoring for.</p>
				</Description>
				<Type ref="CommonTypes" name="ScoreListType"/>
			</Item>

			<Item>
				<Element>Descriptor</Element>
				<Characteristics>O</Characteristics>
				<Description>
					<p>Descriptor of Score Point of the Rubric.</p>
				</Description>
				<Type name="xs:normalizedString"></Type>
			</Item>

		</CommonElement>
	</if>


	<!-- Added by NZ -->
	<CommonElement name="AssessmentTaskListType" type="true" dm="true">
		<Item>
			<Element>AssessmentTaskListType</Element>
			<Characteristics>O</Characteristics>
			<List mode="List"/>
		</Item>
		<Item>
			<Element>AssessmentTaskRefId</Element>
			<Characteristics>MR</Characteristics>
			<Description>
				<p>GUID that identifies the sub-ordinate AssessmentTask.</p>
			</Description>
			<Type ref="CommonTypes" name="IdRefType"/>
		</Item>
	</CommonElement>

	<CommonElement name="LearningStandardListType" type="true" dm="true">
		<Item>
			<Element>LearningStandardListType</Element>
			<Characteristics>O</Characteristics>
			<List mode="List"/>
		</Item>
		<Item>
			<Element>LearningStandard</Element>
			<Characteristics>MR</Characteristics>
			<Description>
				<p>Generic object reference to the LearningStandard</p>
			</Description>
			<Type ref="CommonTypes" name="ObjectReferenceType"/>
		</Item>
	</CommonElement>

	<CommonElement name="SpecialAssessmentConditionListType" type="true" dm="true">
		<Item>
			<Element>SpecialAssessmentConditionListType</Element>
			<Description>
				<p>A list of Special Assessment Conditions (SACs) that may be applied, or excluded form	
				a particular student's participation in an assessment task.</p>
			</Description>
			<List mode="List"/>
		</Item>
		<Item>
			<Element>SpecialAssessmentCondition</Element>
			<Characteristics>OR</Characteristics>
			<Description>
				<p>A single SAC that may be applied, or excluded from a student's participation in an assessment task.</p>
			</Description>
			<Type ref="CodeSets" name="NZCodeSetsSpecialAssessmentConditionType"/>
		</Item>
	</CommonElement>
</IncludeGroup>
