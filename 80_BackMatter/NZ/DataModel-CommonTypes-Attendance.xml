<IncludeGroup xmlns:xs="http://www.w3.org/2001/XMLSchema" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:xi="http://www.w3.org/2001/XInclude" 
	xmlns:xhtml="http://www.w3.org/1999/xhtml" 
	xmlns:json="http://json.org/" 
	xmlns="http://sifassociation.org/SpecGen">

	<!-- IncludeGroup is syntactic sugar that makes this a well-formed XML file that can
		 be validated separately; and allows the xi:include to have parse="xml"  SpecGen tool ignores it. -->


	<!-- Borrowed from SIF AU -->
	<CommonElement name="AttendanceTimeListType" type="true" dm="true">
		<Item>
			<Element>AttendanceTimeListType</Element>
			<Description>
				<p>Breakdown of times that the student entered or returned to school.</p>
			</Description>
			<List mode="List"/>
		</Item>
		<Item>
			<Element>AttendanceTime</Element>
			<Characteristics>MR</Characteristics>
			<Description>
				<p/>
			</Description>
			<Type ref="CommonTypes" name="AttendanceTimeType"/>
		</Item>		<!-- AttendanceTime -->

		<xhtml:Example xmlns="" name="Attendance Time List Example">
			<AttendanceTimeList>
				<AttendanceTime>
					<AttendanceType>Swipe Cards</AttendanceType>
					<AttendanceCode>E</AttendanceCode>
					<AttendanceStatus>UNE</AttendanceStatus>
					<StartTime>09:00:00</StartTime>
					<EndTime>09:40:00</EndTime>
					<DurationValue>40</DurationValue>
					<AttendanceNote>Explained absence, but unjustified.</AttendanceNote>
				</AttendanceTime>
				<AttendanceTime>
					<AttendanceType>Swipe Cards</AttendanceType>
					<AttendanceCode>E</AttendanceCode>
					<AttendanceStatus>UNE</AttendanceStatus>
					<StartTime>09:45:00</StartTime>
					<EndTime>10:30:00</EndTime>
					<DurationValue>45</DurationValue>
					<AttendanceNote>Explained absence, but unjustified.</AttendanceNote>
				</AttendanceTime>
			</AttendanceTimeList>
		</xhtml:Example>
	</CommonElement>

	<CommonElement name="AttendanceTimeType" type="true" dm="true">
		<Item>
			<Element>AttendanceTimeType</Element>
			<Characteristics>MR</Characteristics>
			<Description>
				<p>Time span that the student entered or returned to school</p>
			</Description>
		</Item>
		<Item>
			<Element>AttendanceType</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>Nature of the attendance e.g. 'Taken at Roll Call'</p>
			</Description>
			<Type name="xs:string"/>
		</Item>		<!-- AttendanceType -->
		<Item>
			<Element>AttendanceCode</Element>
			<Characteristics>M</Characteristics>
			<Description>
				<p>MoE defined code for attendance or absence during the time period described.</p>
			</Description>
			<if intl="nz">
				<Type ref="CodeSets" name="NZCodeSetsAttendanceCodeType"/>
			</if>
		</Item>		<!-- AttendanceCode -->
		<Item>
			<Element>AttendanceStatus</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>Mo defined code recording the status of the attendance record</p>
			</Description>
			<Type ref="CodeSets" name="NZCodeSetsAttendanceStatusType"/>
		</Item>		<!-- AttendanceStatus -->
		<Item>
			<Element>StartTime</Element>
			<Characteristics>M</Characteristics>
			<Description>
				<p>The start of this particular time span.</p>
			</Description>
			<Type name="xs:time"/>
		</Item>		<!-- StartTime -->
		<Item>
			<Element>EndTime</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>The end of this particular time span.</p>
			</Description>
			<Type name="xs:time"/>
		</Item>		<!-- EndTime -->
		<Item>
			<Element>DurationValue</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>The number of minutes the student was present or absent.</p>
			</Description>
			<Type name="xs:decimal"/>
			<Facets>
				<xs:minInclusive value="0"/>
			</Facets>
		</Item>		<!-- DurationValue -->
		<Item>
			<Element>AttendanceNote</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>Note related to this particular time span.</p>
			</Description>
			<Type name="xs:normalizedString"/>
		</Item>		<!-- AttendanceNote -->

		<xhtml:Example xmlns="" name="Attendance Time Example">
			<AttendanceTime>
				<AttendanceType>Swipe Cards</AttendanceType>
				<AttendanceCode>E</AttendanceCode>
				<AttendanceStatus>UNE</AttendanceStatus>
				<StartTime>09:45:00</StartTime>
				<EndTime>10:30:00</EndTime>
				<DurationValue>45</DurationValue>
				<AttendanceNote>Explained absence, but unjustified.</AttendanceNote>
			</AttendanceTime>
		</xhtml:Example>
	</CommonElement>

	<CommonElement name="PeriodAttendanceListType" type="true" dm="true">
		<Item>
			<Element>PeriodAttendanceListType</Element>
			<Description>
				<p>Breakdown of grouped period attendance.</p>
			</Description>
			<List mode="List"/>
		</Item>
		<Item>
			<Element>PeriodAttendance</Element>
			<Characteristics>MR</Characteristics>
			<Description>
				<p/>
			</Description>
			<Type ref="CommonTypes" name="PeriodAttendanceType"/>
		</Item>		<!-- PeriodAttendance -->

		<xhtml:Example xmlns="" name="Period Attendance List Example">
			<PeriodAttendanceList>
				<PeriodAttendance>
					<AttendanceCode>E</AttendanceCode>
					<AttendanceStatus>UNE</AttendanceStatus>
					<StartTime>09:00:00</StartTime>
					<EndTime>09:40:00</EndTime>
					<AttendanceNote>Explained absence, but unjustified.</AttendanceNote>
				</PeriodAttendance>
				<PeriodAttendance>
					<AttendanceCode>E</AttendanceCode>
					<AttendanceStatus>UNE</AttendanceStatus>
					<StartTime>09:45:00</StartTime>
					<EndTime>10:30:00</EndTime>
					<StudentTimeIn>09:58:00</StudentTimeIn>
					<SubjectAreaList json:force-array="true">
						<SubjectArea>MATH</SubjectArea>
					</SubjectAreaList>
					<TeacherList>
						<StaffMember json:force-array="true">
							<RefId>5e695355-3593-407c-b24e-03e75b8721a1</RefId>
							<LocalId>McWP</LocalId>
							<Name>Phineas McWhirter</Name>
						</StaffMember>
					</TeacherList>
					<RoomList>
						<RoomId>
							<LocalId>12P</LocalId>
						</RoomId>
					</RoomList>
					<AttendanceNote>Late to Class, Explained absence, but unjustified.</AttendanceNote>
				</PeriodAttendance>
			</PeriodAttendanceList>
		</xhtml:Example>
	</CommonElement>

	<CommonElement name="PeriodAttendanceType" type="true" dm="true">
		<Item>
			<Element>PeriodAttendanceType</Element>
			<Characteristics>MR</Characteristics>
			<Description>
				<p>This container type allows recording of period level attendance for a student.</p>
			</Description>
		</Item>
		<Item>
			<Element>AttendanceCode</Element>
			<Characteristics>M</Characteristics>
			<Description>
				<p>MoE defined code for attendance or  absence during the time period described.</p>
			</Description>
			<Type ref="CodeSets" name="NZCodeSetsAttendanceCodeType"/>
		</Item>		<!-- AttendanceCode -->
		<Item>
			<Element>AttendanceStatus</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>MoE defined code recoding the status of the attendance record.</p>
			</Description>
			<Type ref="CodeSets" name="NZCodeSetsAttendanceStatusType"/>
		</Item>		<!-- AttendanceStatus -->
		<Item>
			<Element>TeachingGroupEvent</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>Generic object reference to the Teaching Group Event the attendance is being taken for.</p>
			</Description>
			<Type ref="CommonTypes" name="ObjectReferenceType"/>
		</Item>		<!-- TeachingGroupEvent -->
		<Item>
			<Element>StartTime</Element>
			<Characteristics>M</Characteristics>
			<Description>
				<p>Optional Start Time of Curriculum Session</p>
			</Description>
			<Type name="xs:time"></Type>
		</Item>		<!-- StartTime -->
		<Item>
			<Element>EndTime</Element>
			<Characteristics>M</Characteristics>
			<Description>
				<p>Optional End Time of Curriculum Session</p>
			</Description>
			<Type name="xs:time"></Type>
		</Item>		<!-- EndTime -->
		<Item>
			<Element>StudentTimeIn</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>The time the student entered or returned to this class.</p>
			</Description>
			<Type name="xs:time"></Type>
		</Item>		<!-- StudentTimeIn -->
		<Item>
			<Element>StudentTimeOut</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>The time the student left this class.</p>
			</Description>
			<Type name="xs:time"></Type>
		</Item>		<!-- StudentTimeOut -->
		<Item>
			<Element>SubjectAreaList</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>List of learning / subject areas that apply to the period the attendance record was taken for.</p>
			</Description>
			<Type ref="CommonTypes" name="SubjectAreaListType"/>
		</Item>		    <!-- SubjectAreaList -->
		<Item>
			<Element>TeacherList</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>List of teachers</p>
			</Description>
			<Type ref="CommonTypes" name="StaffListType"/>
		</Item>		        <!-- TeacherList -->
		<Item>
			<Element>RoomList</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>List of rooms that apply to the period the attendance record was taken for.</p>
			</Description>
			<Type ref="CommonTypes" name="RoomListType"/>
		</Item>             <!-- RoomList -->
		<Item>
			<Element>AttendanceNote</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>Note related to this particular attendance.</p>
			</Description>
			<Type name="xs:normalizedString"/>
		</Item>		        <!-- AttendanceNote -->
		<Item>
			<Element>PeriodName</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>The name of the period in  this curriculum session.</p>
			</Description>
			<Type name="xs:normalizedString"/>
		</Item>		        <!-- PeriodName -->

			<xhtml:Example xmlns="" name="Period Attendance Example (Absence)">
			<PeriodAttendance>
				<AttendanceCode>E</AttendanceCode>
				<AttendanceStatus>UNE</AttendanceStatus>
				<StartTime>09:00:00</StartTime>
				<EndTime>09:50:00</EndTime>
				<SubjectAreaList json:force-array="true">
					<SubjectArea>MATH</SubjectArea>
				</SubjectAreaList>
				<TeacherList>
					<StaffMember json:force-array="true">
						<RefId>5e695355-3593-407c-b24e-03e75b8721a1</RefId>
						<LocalId>McWP</LocalId>
						<Name>Phineas McWhirter</Name>
					</StaffMember>
				</TeacherList>
				<RoomList>
					<RoomId json:force-array="true">
						<LocalId>12P</LocalId>
					</RoomId>
				</RoomList>
				<AttendanceNote>Explained absence, but unjustified.</AttendanceNote>
			</PeriodAttendance>
		</xhtml:Example>

		<xhtml:Example xmlns="" name="Period Attendance Example (Late)">
			<PeriodAttendance>
				<AttendanceCode>E</AttendanceCode>
				<AttendanceStatus>UNE</AttendanceStatus>
				<StartTime>09:00:00</StartTime>
				<EndTime>09:50:00</EndTime>
				<StudentTimeIn>09:35:00</StudentTimeIn>
				<SubjectAreaList json:force-array="true">
					<SubjectArea>MATH</SubjectArea>
				</SubjectAreaList>
				<TeacherList>
					<StaffMember json:force-array="true">
						<RefId>5e695355-3593-407c-b24e-03e75b8721a1</RefId>
						<LocalId>McWP</LocalId>
						<Name>Phineas McWhirter</Name>
					</StaffMember>
				</TeacherList>
				<RoomList>
					<RoomId>
						<LocalId>12P</LocalId>
					</RoomId>
				</RoomList>
				<AttendanceNote>Explained absence, but unjustified.</AttendanceNote>
			</PeriodAttendance>
		</xhtml:Example>
	</CommonElement>
</IncludeGroup>
