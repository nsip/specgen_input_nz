<IncludeGroup xmlns:xs="http://www.w3.org/2001/XMLSchema" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:xi="http://www.w3.org/2001/XInclude" 
	xmlns:xhtml="http://www.w3.org/1999/xhtml" 
	xmlns:json="http://json.org/" 
	xmlns="http://sifassociation.org/SpecGen">

	<!-- IncludeGroup is syntactic sugar that makes this a well-formed XML file that can
		 be validated separately; and allows the xi:include to have parse="xml"  SpecGen tool ignores it. -->


	<CommonElement name="AttendanceTimeListType" type="true" dm="true">
		<Item>
			<Element>AttendanceTimeListType</Element>
			<Description>
				<p>Breakdown of times that the student entered or returned to school.</p>
			</Description>
			<List mode="List"/>
		</Item>
		<Item>
			<Element>AttendanceTime</Element>
			<Characteristics>MR</Characteristics>
			<Description>
				<p/>
			</Description>
			<Type ref="CommonTypes" name="AttendanceTimeType"/>
		</Item>		<!-- AttendanceTime -->

		<xhtml:Example xmlns="" name="Attendance Time List">
			<AttendanceTimeList>
				<AttendanceTime>
					<AttendanceTimeLocalId>7f11e3ed-3ac5-4673-9fdc-bcdbcd934554</AttendanceTimeLocalId>
					<AttendanceType>SCH</AttendanceType>
					<AttendanceCode>P</AttendanceCode>
					<AttendanceDate>2018-06-26</AttendanceDate>	
					<SchedulePeriod>
						<RefId>7f11e3ed-3ac5-4673-9fdc-bcdbcd999999</RefId>
					</SchedulePeriod>
					<SubmissionDate>2018-06-30</SubmissionDate>		
					<LastUpdatedDate>2018-06-28</LastUpdatedDate>
					<AttendanceNote>Student was present.</AttendanceNote>
				</AttendanceTime>	
				<AttendanceTime>
					<AttendanceTimeLocalId>7f11e3ed-3ac5-4673-9fdc-bcdbcd934667</AttendanceTimeLocalId>
					<AttendanceType>ADH</AttendanceType>
					<AttendanceCode>E</AttendanceCode>
					<AttendanceDate>2018-06-27</AttendanceDate>	
					<StartTime>09:45:00</StartTime>
					<EndTime>10:30:00</EndTime>
					<SubmissionDate>2018-06-30</SubmissionDate>		
					<LastUpdatedDate>2018-06-28</LastUpdatedDate>
					<AttendanceNote>Explained absence, but unjustified.</AttendanceNote>
				</AttendanceTime>
			</AttendanceTimeList>	
		</xhtml:Example>

	</CommonElement>

	<CommonElement name="AttendanceTimeType" type="true" dm="true">
		<Item>
			<Element>AttendanceTimeType</Element>
			<Description>
				<p>Time span that the student entered or returned to school</p>
			</Description>
		</Item>

		<Item>
			<Element>AttendanceTimeLocalId</Element>
			<Characteristics>M</Characteristics>
			<Description>
				<p>The source system identifier of the attendance time list record.</p>
			</Description>
			<Type ref="CommonTypes" name="LocalId"/>
		</Item>		<!-- AttendanceTimeLocalId -->

		<Item>
			<Element>AttendanceType</Element>
			<Characteristics>M</Characteristics>
			<Description>
				<p>The type of attendance being recorded e.g. Scheduled or Ad Hoc. If it is a schedule attendance then the SchedulePeriod must also be provided. If it is an Ad Hoc attendance then StartDateTime and EndDateTime must also be provided.</p>
			</Description>
			<Type ref="CodeSets" name="NZCodeSetsAttendanceTypeType"/>
		</Item>		<!-- AttendanceType -->

		<Item>
			<Element>AttendanceCodeGroup</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>The attendance code group the students attendance code belongs to.</p>
			</Description>
			<Type ref="CodeSets" name="NZCodeSetsAttendanceCodeGroupType"/>
		</Item>		<!-- AttendanceCodeGroup -->

		<Item>
			<Element>AttendanceCode</Element>
			<Characteristics>M</Characteristics>
			<Description>
				<p>MoE defined code for attendance or  absence during the time period described.</p>
			</Description>
			<Type ref="CodeSets" name="NZCodeSetsAttendanceCodeType"/>
		</Item>		<!-- AttendanceCode -->

		<Item>
			<Element>AttendanceDate</Element>
			<Characteristics>M</Characteristics>
			<Description>
				<p>The date the attendance is being record for.</p>
			</Description>
			<Type name="xs:date"/>
		</Item>		<!-- AttendanceDate -->

		<Item>
			<Element>SchedulePeriod</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>The scheduled period this attendnance time list record is for. The SchedulePeriod must be provided if the AttendanceType = 'Scheduled'.</p>
			</Description>
			<Type ref="CommonTypes" name="ObjectReference"/>
		</Item>		<!-- SchedulePeriod -->
		
		<Item>
			<Element>StartTime</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>The Start Time of the students attendance for the provided Attendance Date. Mandatory for attendance records with a type of 'Ad Hoc'.</p>
			</Description>
			<Type name="xs:time"/>
		</Item>		<!-- StartTime -->

		<Item>
			<Element>EndTime</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>The End Time of the students attendance for the provided Attendance Date. Mandatory for attendance records with a type of 'Ad Hoc'.</p>
			</Description>
			<Type name="xs:time"/>
		</Item>		<!-- EndTime -->

		<Item>
			<Element>SubmissionDate</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>The date the students attendance for this date and time/period was submitted.</p>
			</Description>
			<Type name="xs:date"/>
		</Item>		<!-- SubmissionDate -->

		<Item>
			<Element>LastUpdatedDate</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>The date the students attendance for this date and time/period was last updated.</p>
			</Description>
			<Type name="xs:date"/>
		</Item>		<!-- LastUpdatedDate -->

		<Item>
			<Element>AttendanceNote</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>Free text note about the students attendance for the provided date and time/period.</p>
			</Description>
			<Type name="xs:normalizedString"/>
		</Item>		<!-- AttendanceNote -->
	</CommonElement>

</IncludeGroup>
