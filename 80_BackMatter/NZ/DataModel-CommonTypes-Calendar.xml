<IncludeGroup
	xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:xi="http://www.w3.org/2001/XInclude"
	xmlns:xhtml="http://www.w3.org/1999/xhtml"
	
	xmlns="http://sifassociation.org/SpecGen">

	<!-- IncludeGroup is syntactic sugar that makes this a well-formed XML file that can
		 be validated separately; and allows the xi:include to have parse="xml"  SpecGen tool ignores it. -->


	<!-- Borrowed from SIF AU -->
	<CommonElement name="SchoolYearType" type="true" dm="true">
		<Intro>
			<p>Common element used to designate the academic school year to which an object relates.</p>
		</Intro>
		<Item>
			<Element>SchoolYearType</Element>
			<Description>
				<p>School year for which the information is applicable, expressed as the four-digit year in which the school year ends (e.g., "2009").</p>
			</Description>
			<Type name="xs:gYear"/>
		</Item>
		<xhtml:Example xmlns="" name="School Year Example">
			<SchoolYear>2005</SchoolYear>
		</xhtml:Example>
	</CommonElement>
	<CommonElement name="YearLevelType" type="true" dm="true">
		<Intro>
			<p/>
		</Intro>
		<Item>
			<Element>YearLevelType</Element>
			<Description>
				<p>Year or academic level.</p>
			</Description>
		</Item>
		<Item>
			<Element>Code</Element>
			<Characteristics>M</Characteristics>
			<Description>
				<p>Code representing the year level.</p>
			</Description>
			<Type ref="CodeSets" name="NZCodeSetsYearLevelCodeType"/>
		</Item>
		<xhtml:Example xmlns="" name="YearLevel Example">
			<YearLevel>
				<Code>8</Code>
			</YearLevel>
		</xhtml:Example>
	</CommonElement>
    <CommonElement name="YearLevelsType" type="true" dm="true">
		<Item>
			<Element>YearLevelsType</Element>
			<Description>
				<p>List of year levels.</p>
			</Description>
			<List mode="List"/>
		</Item>
		<Item>
			<Element>YearLevel</Element>
			<Characteristics>MR</Characteristics>
			<if intl="nz">
				<Type ref="CodeSets" name="NZCodeSetsYearLevelCodeType"/>
			</if>
			<if intl="au">
				<Type ref="CommonTypes" name="YearLevelType"/>
			</if>
		</Item>    <!-- YearLevel -->
		<xhtml:Example xmlns="" name="Year Levels Example" intl="au">
			<YearLevels>
				<YearLevel>
					<Code>5</Code>
				</YearLevel>
				<YearLevel>
					<Code>6</Code>
				</YearLevel>
				<YearLevel>
					<Code>7</Code>
				</YearLevel>
				<YearLevel>
					<Code>8</Code>
				</YearLevel>
			</YearLevels>
		</xhtml:Example>
		<xhtml:Example xmlns="" name="Year Levels Example" intl="nz">
			<YearLevels>
				<YearLevel>5</YearLevel>
				<YearLevel>6</YearLevel>
				<YearLevel>7</YearLevel>
				<YearLevel>8</YearLevel>
			</YearLevels>
		</xhtml:Example>
    </CommonElement>
</IncludeGroup>
