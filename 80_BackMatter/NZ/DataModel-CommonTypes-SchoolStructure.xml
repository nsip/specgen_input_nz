<IncludeGroup
	xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:xi="http://www.w3.org/2001/XInclude"
	xmlns:xhtml="http://www.w3.org/1999/xhtml"
    xmlns:json="http://json.org/"
	
	xmlns="http://sifassociation.org/SpecGen">

	<!-- IncludeGroup is syntactic sugar that makes this a well-formed XML file that can
		 be validated separately; and allows the xi:include to have parse="xml"  SpecGen tool ignores it. -->


	<!-- Borrowed from SIF AU -->

	<CommonElement name="StaffListType" type="true" dm="true">
		<Item>
			<Element>StaffListType</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>A List of staff members associated with the TeachingGroup or AssessmentTask.</p>
			</Description>
			<List mode="List"/>
		</Item>
		<Item>
			<Element>StaffMember</Element>
			<Characteristics>MR</Characteristics>
			<Description>
				<p>Teacher associated with the Teaching group â€“  may or may not be the teacher timetabled in the schedule</p>
			</Description>
			<Type ref="CommonTypes" name="StaffListStaffMemberType"/>
		</Item>    <!-- StaffListStaffMember -->
	</CommonElement>
	<CommonElement name="StaffListStaffMemberType" type="true" dm="true">
		<Item>
			<Element>StaffListStaffMemberType</Element>
			<Characteristics>MR</Characteristics>
			<Description>
				<p>The individual staff member as a member of the StaffListStaffMember who marked the assessment.
				 May or may not be the teacher scheduled in the timetable.</p>
			</Description>
		</Item>
		<Item>
			<Element>StaffPersonalRefId</Element>
			<Characteristics>C</Characteristics>
			<Description>
				<p>RefId of the Staff member. Either StaffPersonalRefidId or StaffLocalId should be supplied.</p>
			</Description>
			<Type ref="CommonTypes" relationship="" count="?:1" name="IdRefType"/>
		</Item>    <!-- StaffPersonalRefId -->
		<Item>
			<Element>StaffLocalId</Element>
			<Characteristics>C</Characteristics>
			<Description>
				<p>LocalId of the Staff member. Either StaffPersonalRefidId or StaffLocalId should be supplied.</p>
			</Description>
			<Type ref="CommonTypes" name="LocalIdType"/>
		</Item>    <!-- StaffLocalId -->
		<Item>
			<Element>Name</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>Name of Staff Member.</p>
			</Description>
			<if intl="au">
				<Type ref="CommonTypes" name="NameOfRecordType"/>
			</if>	
			<if intl="nz">
				<Type ref="CommonTypes" name="BaseNameType"/>
			</if>
		</Item>    <!-- Name -->

		<if intl="au">
			<Item>
				<Element>Association</Element>
				<Characteristics>M</Characteristics>
				<Description>
					<p>Association with the Teaching Group (free format for this release)</p>
				</Description>
				<Type name="xs:normalizedString"/>
			</Item>    <!-- Association -->
		</if>
		<if intl="nz">
			<Item>
				<Element>Role</Element>
				<Characteristics>M</Characteristics>
				<Description>
					<p>Code describing the staff member's role in the TeachingGroup.  e.g.  Teacher,
					 Teacher's Aide, Lab Assistant, Co-Teacher.</p>
					 <p>Note: This role may affect the Teacher's access to the students' data for 
					 those students who are members of the TeachingGroup.</p>
				</Description>
				<Type  ref="CodeSets" name="NZCodeSetsTeachingGroupTeacherRole"/>
			</Item>    <!-- Role -->
		</if>
	</CommonElement>
	<CommonElement name="StudentListType" type="true" dm="true">
		<Item>
			<Element>StudentListType</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>A list of references to the set of Students who are assigned to 
					the Teaching Group, SchoolCourse or AssessmentTask.</p>
			</Description>
			<List mode="List"/>
		</Item>
		<Item>
			<Element>Student</Element>
			<Characteristics>MR</Characteristics>
			<Description>
				<p>Student reference in the StudentList.</p>
			</Description>
			<Type ref="CommonTypes" name="StudentListStudentType"/>
		</Item>       <!-- Student -->
	</CommonElement>
	<CommonElement name="StudentListStudentType" type="true" dm="true">
		<Item>
			<Element>StudentListStudentType</Element>
			<Characteristics>MR</Characteristics>
			<Description>
				<p>Repeatable element, being the reference Ids and/or name of a Student in the list of Students.</p>
			</Description>
		</Item>
		<Item>
			<Element>StudentPersonalRefId</Element>
			<Characteristics>C</Characteristics>
			<Description>
				<p>RefId of the Student who is a member of the StudentList. Either StudentPersonalRefidId 
					or StudentLocalId should be supplied.</p>
			</Description>
			<Type ref="CommonTypes" relationship="" count="?:1" name="IdRefType"/>
		</Item>       <!-- StudentPersonalRefId -->
		<Item>
			<Element>StudentLocalId</Element>
			<Characteristics>C</Characteristics>
			<Description>
				<p>Local Id of the Student who is a member of the StudentList. Either StudentPersonalRefidId or
					 StudentLocalId should be supplied.</p>
			</Description>
			<Type ref="CommonTypes" name="LocalIdType"/>
		</Item>       <!-- StudentPersonalLocalId -->
		<Item>
			<Element>Name</Element>
			<Characteristics>O</Characteristics>
			<Description>
				<p>Name of the Student who is a member of the StudentList.</p>
			</Description>
			<Type ref="CommonTypes" name="BaseNameType"/>
		</Item>       <!-- Name -->
	</CommonElement>


	<!-- Defined by SIF NZ 	-->
	
	<CommonElement name="SchoolServiceType" type="true" dm="true">
		<Item>
			<Element>SchoolServiceType</Element>
			<Description>
				<p>Contains Organisation properties that are specific to Organisations
				that are Providers of School education services.
				</p>
			</Description>
		</Item>
		<Item>
			<Element>CoEdStatus</Element>
			<Characteristics>M</Characteristics>
			<privacyRating>Low</privacyRating>
			<Description>
				<p>A summary of the genders accepted by the school</p>
			</Description>
			<Type ref="CodeSets" name="NZCodeSetsSchoolCoEdStatusType"/>
		</Item>    <!-- CoEdStatus -->
		<Item>
			<Element>Decile</Element>
			<Characteristics>M</Characteristics>
			<privacyRating>Low</privacyRating>
			<Description>
				<p>A description of the socio-economic position of a school's
				student community according to the MoE decile rating system.
				</p>
			</Description>
			<Type name="xs:integer"/>
			<ItemExample>5</ItemExample>
			<Facets>
				<xs:minInclusive value="1"/>
				<xs:maxInclusive value="10"/>
			</Facets>
		</Item>    <!-- Decile -->
		<Item>
			<Element>NewEntrantPolicyList</Element>
			<Characteristics>M</Characteristics>
			<privacyRating>Low</privacyRating>
			<Description>
				<p>A list of recognised policy choices adopted by the School.</p>
			</Description>
			<Type ref="CommonTypes" name="EnactedPolicyListType"/>
		</Item>    <!-- NewEntrantPolicyList -->
		<Item>
			<Element>DefinitionList</Element>
			<Characteristics>M</Characteristics>
			<privacyRating>Low</privacyRating>
			<Description>
				<p>A list of School definition descriptors that further describe the nature of a school</p>
			</Description>
			<Type ref="CommonTypes" name="SchoolDefinitionListType"/>
		</Item>    <!-- DefinitionList -->
		<Item>
			<Element>SchoolYearList</Element>
			<Characteristics>M</Characteristics>
			<privacyRating>Low</privacyRating>
			<Description>
				<p>A list of <code>SchoolYear</code> elements describing
				the genders of students accepted for enrolment at each year
				level.</p>
			</Description>
			<Type ref="CommonTypes" name="SchoolYearLevelListType"/>
		</Item>    <!-- SchoolYearList-->
		
		<xhtml:Example xmlns="" name="NZ School Service Example">
			<SchoolService>
				<CoEdStatus>C2</CoEdStatus>
				<Decile>5</Decile>
				<NewEntrantPolicyList>
					<EnactedPolicy>
						<EffectiveTo>2018-12-31</EffectiveTo>
						<Policy>AgeEntry</Policy>
					</EnactedPolicy>
					<EnactedPolicy>
						<EffectiveFrom>2019-01-01</EffectiveFrom>
						<Policy>CohortEntry</Policy>
					</EnactedPolicy>
				</NewEntrantPolicyList>
				<DefinitionList>
					<Definition json:force-string="true">101</Definition>
					<Definition json:force-string="true">103</Definition>
					<Definition json:force-string="true">108</Definition>
				</DefinitionList>			
				<SchoolYearList>
					<SchoolYear>
						<YearLevel json:force-string="true">1</YearLevel>
						<Gender>C</Gender>
					</SchoolYear>
					<SchoolYear>
						<YearLevel json:force-string="true">2</YearLevel>
						<Gender>C</Gender>
					</SchoolYear>
					<SchoolYear>
						<YearLevel json:force-string="true">3</YearLevel>
						<Gender>C</Gender>
					</SchoolYear>
					<SchoolYear>
						<YearLevel json:force-string="true">4</YearLevel>
						<Gender>C</Gender>
					</SchoolYear>
					<SchoolYear>
						<YearLevel json:force-string="true">5</YearLevel>
						<Gender>C</Gender>
					</SchoolYear>
					<SchoolYear>
						<YearLevel json:force-string="true">6</YearLevel>
						<Gender>C</Gender>
					</SchoolYear>
					<SchoolYear>
						<YearLevel json:force-string="true">7</YearLevel>
						<Gender>C</Gender>
					</SchoolYear>
					<SchoolYear>
						<YearLevel json:force-string="true">8</YearLevel>
						<Gender>C</Gender>
					</SchoolYear>
					<SchoolYear>
						<YearLevel json:force-string="true">9</YearLevel>
						<Gender>F</Gender>
					</SchoolYear>
					<SchoolYear>
						<YearLevel json:force-string="true">10</YearLevel>
						<Gender>F</Gender>
					</SchoolYear>
					<SchoolYear>
						<YearLevel json:force-string="true">11</YearLevel>
						<Gender>F</Gender>
					</SchoolYear>
					<SchoolYear>
						<YearLevel json:force-string="true">12</YearLevel>
						<Gender>F</Gender>
					</SchoolYear>
					<SchoolYear>
						<YearLevel json:force-string="true">13</YearLevel>
						<Gender>F</Gender>
					</SchoolYear>
				</SchoolYearList>
			</SchoolService>
		</xhtml:Example>
	</CommonElement>
	
	<CommonElement name="SchoolYearLevelListType" type="true" dm="true">
		<Item>
			<Element>SchoolYearLevelListType</Element>
			<Description>
				<p>A list of <code>NZSchoolYearLevel</code> elements, describing the Year Levels
				taught by the School, and the Co-Ed Status of each year level.
				</p>
			</Description>
			<List mode="List"/>
		</Item>
		<Item>
			<Element>SchoolYear</Element>
			<Characteristics>OR</Characteristics>
			<Description/>
			<Type ref="CommonTypes" name="SchoolYearLevelType"/>
		</Item>
		<xhtml:Example xmlns="" name="NZ School Year Level List Example">
			<SchoolYearList>
				<SchoolYear>
					<YearLevel json:force-string="true">9</YearLevel>
					<Gender>M</Gender>
				</SchoolYear>
				<SchoolYear>
					<YearLevel json:force-string="true">10</YearLevel>
					<Gender>M</Gender>
				</SchoolYear>
				<SchoolYear>
					<YearLevel json:force-string="true">11</YearLevel>
					<Gender>C</Gender>
				</SchoolYear>
				<SchoolYear>
					<YearLevel json:force-string="true">12</YearLevel>
					<Gender>C</Gender>
				</SchoolYear>
				<SchoolYear>
					<YearLevel json:force-string="true">13</YearLevel>
					<Gender>C</Gender>
					</SchoolYear>
			</SchoolYearList>
		</xhtml:Example>
	</CommonElement>
	<CommonElement name="SchoolYearLevelType" type="true" dm="true">
		<Item>
			<Element>SchoolYearLevelType</Element>
			<Description>
				<p>A descriptor for a particular Year Level offered by the school, including
				detail of the gender of students that are accepted for enrolment in this year level.
				</p>
			</Description>
		</Item>
		<Item>
			<Element>YearLevel</Element>			
			<Characteristics>M</Characteristics>
			<privacyRating>Low</privacyRating>
			<Description>
				<p>Which year level are we describing?</p>
			</Description>
			<Type ref="CodeSets" name="NZCodeSetsYearLevelCodeType"/>
		</Item>
		<Item>
			<Element>Gender</Element>			
			<Characteristics>M</Characteristics>
			<privacyRating>Low</privacyRating>
			<Description>
				<p>Which genders are accepted for enrolment in this Year Level?</p>
			</Description>
			<Type ref="CodeSets" name="NZCodeSetsSchoolingGenderType"/>
		</Item>
	</CommonElement>

	<CommonElement name="YearLevelListType" type="true" dm="true">
		<Item>
			<Element>YearLevelListType</Element>
			<Description>
				<p>A list of <code>NZSchoolYearLevel</code> elements, describing the Year Levels
				taught to the Course or TeachingGroup.
				</p>
			</Description>
			<List mode="List"/>
		</Item>
		<Item>
			<Element>YearLevel</Element>			
			<Characteristics>OR</Characteristics>
			<privacyRating>Low</privacyRating>
			<Description>
				<p>Which year level are we describing?</p>
			</Description>
			<Type ref="CodeSets" name="NZCodeSetsYearLevelCodeType"/>
		</Item>
		<xhtml:Example xmlns="" name="NZ Year Level List Example">
			<YearLevelList>
				<YearLevel json:force-string="true">9</YearLevel>
			</YearLevelList>
		</xhtml:Example>
	</CommonElement>

	<CommonElement name="EnactedPolicyListType" type="true" dm="true">
		<Item>
			<Element>EnactedPolicyListType</Element>
			<Description>
				<p>A list of <code>EnactedPolicy</code> elements, describing the
				state legislated policy choices the school has adopted, and the
				time-period of that adoption.
				</p>
			</Description>
			<List mode="List"/>
		</Item>
		<Item>
			<Element>EnactedPolicy</Element>
			<Characteristics>OR</Characteristics>
			<Description/>
			<Type ref="CommonTypes" name="EnactedPolicyType"/>
		</Item>
		<xhtml:Example xmlns="" name="NZ Policy Choice List Example">
			<NewEntrantPolicyList>
				<EnactedPolicy>
					<EffectiveTo>2018-12-31</EffectiveTo>
					<Policy>AgeEntry</Policy>
				</EnactedPolicy>
				<EnactedPolicy>
					<EffectiveFrom>2019-01-01</EffectiveFrom>
					<Policy>CohortEntry</Policy>
				</EnactedPolicy>
			</NewEntrantPolicyList>
		</xhtml:Example>
	</CommonElement>
	<CommonElement name="EnactedPolicyType" type="true" dm="true">
		
		<Item>
			<Element>EnactedPolicyType</Element>
			<Description>
				<p>A descriptor for a particular enacted policy that has been adopted by a school.</p>
			</Description>
		</Item>
		<Item>
			<Element>EffectiveFrom</Element>			
			<Characteristics>O</Characteristics>
			<privacyRating>Low</privacyRating>
			<Description>
				<p>The date from which the school adopted the policy.  If not populated
				then this is the current/original policy of the school.</p>
			</Description>
			<Type name="xs:date"/>
		</Item>
		<Item>
			<Element>EffectiveTo</Element>			
			<Characteristics>O</Characteristics>
			<privacyRating>Low</privacyRating>
			<Description>
				<p>The date after which the school has no longer adopted the policy.  If not populated
				then the school has no planned date to end the policy.</p>
			</Description>
			<Type name="xs:date"/>
		</Item>
		<Item>
			<Element>Policy</Element>			
			<Characteristics>M</Characteristics>
			<privacyRating>Low</privacyRating>
			<Description>
				<p>Which recognised policy has been chosen?</p>
			</Description>
			<Type ref="CodeSets" name="NZCodeSetsEnactedPolicyType"/>
		</Item>
	</CommonElement>			

	<CommonElement name="SchoolDefinitionListType" type="true" dm="true">
		<Item>
			<Element>SchoolDefinitionListType</Element>
			<Description>
				<p>A list of <code>Definition</code> elements, further describing the
				nature of the school.</p>
			</Description>
			<List mode="List"/>
		</Item>
		<Item>
			<Element>Definition</Element>
			<Characteristics>OR</Characteristics>
			<Description/>
			<Type ref="CodeSets" name="NZCodeSetsSchoolDefinitionType"/>
		</Item>
		<xhtml:Example xmlns="" name="NZ School Definition List Example">
			<SchoolDefinitionList>
				<Definition json:force-string="true">103</Definition>
				<Definition json:force-string="true">108</Definition>
			</SchoolDefinitionList>
		</xhtml:Example>
	</CommonElement>
</IncludeGroup>
